<!--
theme name:		MasOS Theme
version:		1.0
author:			My Arcade Spain: Moriggy & Mabedeep
-->

<theme>

	<formatVersion>4</formatVersion>

	<feature supported="carousel">
	
	<view name="system">
	
		<!-- Imagen de fondo estatica -->
		
		<image name="background" extra="true">
		
			<path>./_art/fondo.jpg</path>
			<maxSize>1 1</maxSize>
			<pos>0 0</pos>
			
		</image>
		
		<!-- Imagen de consola -->
		
		<image name="background2" extra="true">
		
			<path>./_art/consolas/${system.theme}.png</path>
			<origin>0 0</origin>
			<size>0.275 0.4</size>
			<pos>0.18 0.30</pos>
			
		</image>
		
		<!-- Logo de sistema -->
		
		<image name="logo">
		
			<path>./_art/logos/${system.theme}.png</path>
			
		</image>
		
		<!-- Modo de vista de los sistemas - modo Hypersipin -->
		
		<carousel name="systemcarousel">
		
			<type>vertical_wheel</type>
			<pos>0 0</pos>
			<size>1 1</size>
			<origin>0 0</origin>
			<color>FFFFFF00</color>
			<logoScale>1.5</logoScale>
			<logoSize>0.15 0.10</logoSize>
			<logoRotation>-9.0</logoRotation>
			<logoRotationOrigin>4 0.5</logoRotationOrigin>
			<logoAlignment>right</logoAlignment>
			<maxLogoCount>9</maxLogoCount>
			<zIndex>75</zIndex>
		
		</carousel>
		
		<!-- Numero de juegos del sistema -->
		
		<text name="systemInfo">
		
			<pos>0 0.555</pos>
			<size>0.980 0.050</size>
			<color>FFFFFF</color>
			<fontPath>./_art/Benguiat Bold.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<alignment>right</alignment>
			<zIndex>70</zIndex>
			
		</text>
		
		<!-- Texto info sistema -->
		
		<helpsystem name="help">
		
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
			<fontPath>./_art/Benguiat Bold.ttf</fontPath>
			<fontSize>0.020</fontSize>
			
		</helpsystem>
		
	</view>
	
	</feature>
		
	<view name="basic, detailed, video">
	
		<!-- Fondo gamelist -->
		
		<image name="backgroundfilter" extra="true">
		
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./_art/gamelist.png</path>
			<zIndex>70</zIndex>
			
		</image>
		
		<!-- Logo sistema -->
		
		<image name="logo2" extra="true">
		
			<path>./_art/logos2/${system.theme}.svg</path>
			<pos>0.05 0.020</pos>
			<maxSize>0.35 0.10</maxSize>
			<zIndex>90</zIndex>
			
		</image>
	
		<!-- Texto del sistema -->

		<helpsystem name="help">
		
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
			<fontPath>./_art/Benguiat Bold.ttf</fontPath>
			<fontSize>0.020</fontSize>
			
		</helpsystem>
	
	</view>
	
	<view name="basic">
		
		<!-- Posicion de listado de juegos -->
		
		<textlist name="gamelist">
		
			<selectorImagePath>./_art/selector.png</selectorImagePath>
			<selectorColor>719CC6</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>dee0e8</primaryColor>
			<secondaryColor>eac428</secondaryColor>
			<alignment>left</alignment>
			<fontPath>./_art/Benguiat Bold.ttf</fontPath>	
			<forceUppercase>1</forceUppercase>
			<pos>0.007 0.15</pos>
			<size>0.40 0.75</size>
			<fontSize>0.020</fontSize>
			<lineSpacing>1.475</lineSpacing>
			<horizontalMargin>0.015</horizontalMargin>
			<scrollSound>./_art/scroll.wav</scrollSound>
			<zIndex>90</zIndex>
			
		</textlist>
		
		<!-- Posicion y tamaño imagen juego -->

		<image name="md_image">
		
			<Size>0.75 0.50</maxSize>
			<pos>0.73 0.29</pos>
			
		</image>
		
	</view>
	
	<view name="detailed">
	
		<!-- Posicion y tamaño imagen juego -->

		<image name="md_image">
		
			<maxSize>0.85 0.50</maxSize>
			<pos>0.73 0.29</pos>
			
		</image>
		
	</view>
	
	<feature supported="video">
	
		<view name="video">
		
			<!-- Posicion y tamaño del video juego -->

			<video name="md_video">
			
				<maxSize>0.85 0.53</maxSize>
				<pos>0.73 0.30</pos>
				<delay>1.3</delay>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>true</showSnapshotDelay>
				
			</video>
			
		</view>
		
	</feature>
			
	<view name="detailed,video">
	
		<!-- Posicion de listado de juegos -->
		
		<textlist name="gamelist">
		
			<selectorImagePath>./_art/selector.png</selectorImagePath>
			<selectorColor>719CC6</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>dee0e8</primaryColor>
			<secondaryColor>eac428</secondaryColor>
			<alignment>left</alignment>
			<fontPath>./_art/Benguiat Bold.ttf</fontPath>	
			<forceUppercase>1</forceUppercase>
			<pos>0.0075 0.15</pos>
			<size>0.43 0.75</size>
			<fontSize>0.020</fontSize>
			<lineSpacing>1.475</lineSpacing>
			<horizontalMargin>0.015</horizontalMargin>
			<scrollSound>./_art/scroll.wav</scrollSound>
			<zIndex>90</zIndex>
			
		</textlist>

		<!-- Metadatos -->
		
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_favorite">
		
			<color>ffffff</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./_art/Benguiat Bold.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<size>0.12 0.04</size>
			<zIndex>90</zIndex>
			
		</text>
				
		<text name="md_rating, md_developer, md_publisher, md_genre, md_players, md_playcount, md_favorite ,md_releasedate, md_lastplayed">
		
			<color>ffffff</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./_art/Benguiat Bold.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<size>0.14 0.04</size>
			<zIndex>90</zIndex>
			
		</text>

		<!-- Descripcion juego -->
		
		<text name="md_description">
		
			<pos>0.475 0.73</pos>
			<size>0.50 0.18</size>
			<color>00d2f3</color>
			<fontPath>./_art/Benguiat Bold.ttf</fontPath>
			<fontSize>0.018</fontSize>
			<forceUppercase>1</forceUppercase>
			<zIndex>90</zIndex>
			
		</text>
		
		<text name="md_lbl_rating">
			<pos>0.475 0.63</pos>
		</text>

		<rating name="md_rating">
			<pos>0.59 0.64</pos>
			<size>0.028 0.028</size>
			<filledPath>./_art/rating_empty.svg</filledPath>
			<unfilledPath>./_art/rating_filled.svg</unfilledPath>
		</rating>
		
		<text name="md_lbl_players">
			<pos>0.69 0.63</pos>
		</text>
		
		<text name="md_players">
			<pos>0.78 0.63</pos>
		</text>
			
		<text name="md_lbl_genre">
			<pos>1 1</pos>
		</text>
		
		<text name="md_genre">
			<pos>1 1</pos>
		</text>
			
		<text name="md_lbl_releasedate">
			<pos>0.825 0.63</pos>
		</text>
		
		<datetime name="md_releasedate">
			<pos>0.915 0.63</pos>
			<zIndex>80</zIndex>
		</datetime>
			
		<text name="md_lbl_developer">
			<pos>1 1</pos>
		</text>
		
		<text name="md_developer">
			<pos>1 1</pos>
		</text>
			
		<text name="md_lbl_publisher">
			<pos>1 1</pos>
		</text>
		
		<text name="md_publisher">
			<pos>1 1</pos>
		</text>
			
		<text name="md_lbl_lastplayed">
			<pos>1 1</pos>
		</text>
		
		<datetime name="md_lastplayed">
			<pos>1 1</pos>
		</datetime>
			
		<text name="md_lbl_playcount">
			<pos>1 1</pos>
		</text>
		
		<text name="md_playcount">
			<pos>1 1</pos>
		</text>
		
		<text name="md_lbl_favorite">
			<pos>1 1</pos>
		</text>
		
		<text name="md_favorite">
			<pos>1 1</pos>
		</text>
		
	</view>
	
</theme>
